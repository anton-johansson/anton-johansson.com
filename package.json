{
  "name": "resume",
  "version": "0.1.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "start": "concurrently --kill-others-on-fail \"npm run-script server\" \"npm run-script client\"",
    "build": "cd client && npm run build && rm -rf ../server/public && mv dist ../server/public && cp -R public/* ../server/public/"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.4",
    "express-rate-limit": "3.4.0",
    "got": "9.6.0",
    "nodemailer": "5.1.1"
  },
  "devDependencies": {
    "concurrently": "4.0.1"
  }
}
